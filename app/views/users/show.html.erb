<h1><%=@user.username%>'s Movie Reviews</h1>
<%if @session[:user_id]%>
<a href="/posts/new">Write a new Review</a>
<%end%>
<%@posts.each do |post|%>
<br>
  <h2><a href="/posts/<%=post.id%>"><%=post.movie.title%>(<%=post.movie.year%>)</a></h2>
  <br>
  <p><%= post.content%></p>
  <br>
  User rating: <%=post.user_rating%>
  <%end%>
